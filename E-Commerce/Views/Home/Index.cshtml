@model IEnumerable<E_Commerce.Models.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}

<h2>Product Details</h2>
<hr></hr> <style>
              .btn-custom-size {
                  width: 100px; /* or any fixed width you prefer */
                  height: 40px; /* or any fixed height you prefer */
                  padding: 10px; /* adjust padding to your preference */
                  display: inline-block;
                  text-align: center;
                  line-height: 20px; /* adjust line-height to vertically align text within the button */
                  vertical-align: middle;
                  font-size: 14px; /* ensure same font size */
                  border: none; /* standardize border */
                  /* Any other properties to ensure visual consistency */
              }
</style>


<table class="table table-striped table-dark table-sm ">
    <thead class="">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                   <img src="~/Images/@item.Image" height="100"  width="100" alt="Alternate Text" />
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id" class="btn  btn-primary btn-custom-size border-0">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark btn-custom-size">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id"onclick="return confirm('Are you sure')"  class="btn  btn-danger btn-custom-size">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
